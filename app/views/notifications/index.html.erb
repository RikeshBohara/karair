<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="bg-white rounded-lg shadow-sm mb-6">
    <div class="border-b border-gray-200 px-6 py-4">
      <div class="flex justify-between items-center">
        <h1 class="text-2xl font-semibold text-gray-900">Notifications</h1>
        <div class="flex space-x-2">
          <%= link_to notifications_path, class: "px-4 py-2 rounded-lg text-sm font-medium transition-colors #{params[:status] != 'all' ? 'bg-blue-100 text-blue-700' : 'text-gray-600 hover:bg-gray-100'}" do %>
            Unread
          <% end %>
          <%= link_to notifications_path(status: 'all'), class: "px-4 py-2 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'all' ? 'bg-blue-100 text-blue-700' : 'text-gray-600 hover:bg-gray-100'}" do %>
            All
          <% end %>
        </div>
      </div>
    </div>

    <% if @notifications.any? %>
      <div class="divide-y divide-gray-100">
        <% @notifications.each do |notification| %>
          <%= link_to mark_as_read_notification_path(notification), data: { turbo_method: :post }, class: "block hover:bg-gray-50 transition-colors #{notification.read_at? ? 'bg-white' : 'bg-blue-50'}" do %>
            <div class="px-6 py-4 flex items-start gap-4">
              <div class="flex-shrink-0">
                <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
                  <i class="fas fa-bell text-blue-600 text-sm"></i>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between gap-4">
                  <div class="flex-1">
                    <p class="text-gray-900 <%= notification.read_at? ? 'font-normal' : 'font-semibold' %> text-sm leading-relaxed">
                      <%= notification.message %>
                    </p>
                    <p class="text-gray-500 text-xs mt-1">
                      <%= time_ago_in_words(notification.created_at) %> ago
                    </p>
                  </div>
                  <% unless notification.read_at? %>
                    <div class="flex-shrink-0">
                      <div class="w-2 h-2 bg-blue-600 rounded-full"></div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-16 text-center">
        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gray-100 flex items-center justify-center">
          <i class="fas fa-bell-slash text-gray-400 text-2xl"></i>
        </div>
        <p class="text-gray-500 text-lg">You have no notifications.</p>
      </div>
    <% end %>
  </div>
</div>
