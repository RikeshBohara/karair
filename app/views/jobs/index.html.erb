<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Available Jobs</h1>
    <% if user_signed_in? && current_user.recruiter? %>
      <%= link_to 'Post a New Job', new_job_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <% end %>
  </div>

  <% if @jobs.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @jobs.each do |job| %>
        <div class="bg-white rounded-lg shadow-lg overflow-hidden border border-gray-200 flex flex-col">
          <% if job.image.attached? %>
            <%= image_tag job.image.variant(:card_image), class: "w-full h-32 object-cover flex-shrink-0" %>
          <% else %>
            <div class="w-full h-32 bg-gray-200 flex items-center justify-center text-gray-500 flex-shrink-0">
              No Image
            </div>
          <% end %>
          <div class="p-5 flex-grow">
            <h2 class="text-xl font-semibold text-gray-800 mb-2">
              <%= link_to job.title, job, class: "hover:text-blue-600" %>
            </h2>
            <p class="text-gray-600 text-sm mb-1">
              <i class="fas fa-map-marker-alt mr-1 text-gray-500 text-base"></i> <%= job.location %>
            </p>
            <p class="text-gray-600 text-sm mb-3">
              <i class="fas fa-briefcase mr-1 text-gray-500 text-base"></i> <%= job.job_type %>
            </p>
            <p class="text-gray-600 text-sm mb-3">
              <i class="fas fa-calendar-alt mr-1 text-gray-500 text-base"></i> Application deadline: <%= job.end_date.strftime("%B %d, %Y") %>
            </p>
            <p class="text-gray-600 text-sm mb-3">
              <i class="fas fa-users mr-1 text-gray-500 text-base"></i> <%= pluralize(job.job_applications.count, "applicant") %>
            </p>
            <div class="text-sm text-gray-700 leading-relaxed line-clamp-3">
              <%= job.description %>
            </div>
            <div class="mt-4">
              <%= link_to 'View Details', job, class: "text-blue-600 hover:text-blue-700 font-medium" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-gray-500 text-lg mt-10">No jobs posted yet. Check back soon!</p>
  <% end %>
</div>
