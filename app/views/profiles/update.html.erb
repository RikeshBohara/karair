<div class="min-h-screen w-full flex flex-col items-center justify-center bg-gray-100 px-6">
  <h1 class="text-7xl font-bold text-orange-600 mb-6">KarAir</h1>

  <div class="w-full max-w-md bg-white rounded-xl shadow-md p-8">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6 text-center">
      Edit Profile
    </h2>

    <%# Flash messages %>
    <% if flash[:notice].present? %>
      <div class="flash-message bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>
    <% if flash[:alert].present? %>
      <div class="flash-message bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <p><%= flash[:alert] %></p>
      </div>
    <% end %>
    <% if @profile.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <ul class="list-disc list-inside">
          <% @profile.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%# Form for updating profile %>
    <%= form_for(@profile, html: { multipart: true, class: "space-y-5" }) do |f| %>

      <%# First & Last Name (applicants) %>
      <% if current_user.applicant? %>
        <div>
          <%= f.text_field :first_name, placeholder: "First Name", class: "input-field" %>
        </div>
        <div>
          <%= f.text_field :last_name, placeholder: "Last Name", class: "input-field" %>
        </div>
      <% end %>

      <%# Company Name (recruiters) %>
      <% if current_user.recruiter? %>
        <div>
          <%= f.text_field :company_name, placeholder: "Company Name", class: "input-field" %>
        </div>
      <% end %>

      <%# Headline %>
      <div>
        <%= f.text_field :headline, placeholder: "Headline", class: "input-field" %>
      </div>

      <%# Location & Contact %>
      <div>
        <%= f.text_field :location, placeholder: "Location", class: "input-field" %>
      </div>
      <div>
        <%= f.text_field :contact, placeholder: "Contact Number", class: "input-field" %>
      </div>

      <%# File uploads %>
      <div>
        <%= f.file_field :photo, class: "input-field" %>
      </div>

      <% if current_user.applicant? %>
        <div>
          <%= f.file_field :resume, class: "input-field" %>
        </div>
      <% end %>

      <%# Submit button %>
      <div>
        <%= f.submit "Update Profile",
          class: "w-full bg-blue-600 text-white font-semibold py-2 rounded-lg hover:bg-blue-700 transition duration-200" %>
      </div>

    <% end %>

    <div class="text-center mt-4">
      <%= link_to "Back", :back, class: "text-blue-600 hover:underline text-sm" %>
    </div>
  </div>
</div>
