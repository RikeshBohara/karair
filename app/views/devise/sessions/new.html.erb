<div class="min-h-screen w-full flex flex-col md:flex-col items-center justify-center bg-gray-100 px-6">
  <h1 class="text-7xl font-bold text-orange-600 mb-10">KarAir</h1>
  <div class="md:w-1/2 bg-white rounded-xl shadow-md p-8 w-full max-w-md">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6 text-center">Log in</h2>

    <% if flash[:alert].present? %>
      <div class="flash-message bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <p><%= flash[:alert] %></p>
      </div>
    <% elsif flash[:notice].present? %>
      <div class="flash-message bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <div>
        <% email_error = resource.errors[:email].first %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
          placeholder: email_error || "Email address",
          class: "mt-1 block w-full rounded-lg border py-2 px-3 text-gray-700 focus:outline-none focus:ring-2 focus:border-blue-500 #{'border-red-500 placeholder-red-500' if email_error}" %>
      </div>

      <div>
        <% password_error = resource.errors[:password].first %>
        <%= f.password_field :password, autocomplete: "current-password",
          placeholder: password_error || "Password",
          class: "mt-1 block w-full rounded-lg border py-2 px-3 text-gray-700 focus:outline-none focus:ring-2 focus:border-blue-500 #{'border-red-500 placeholder-red-500' if password_error}" %>
      </div>

      <div>
        <%= f.submit "Log in",
          class: "w-full bg-blue-600 text-white font-semibold py-2 rounded-lg hover:bg-blue-700 transition duration-200" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded" %>
          <%= f.label :remember_me, class: "ml-2 text-sm text-gray-600" %>
        </div>
      <% end %>
    <% end %>

    <div class="text-center mt-4">
      <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-blue-600 hover:underline text-sm" %>
    </div>

    <hr class="my-6 border-gray-300">

    <div class="text-center">
      <%= link_to "Create new account", new_registration_path(resource_name),
          class: "bg-green-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-green-600 transition duration-200" %>
    </div>
  </div>
</div>
