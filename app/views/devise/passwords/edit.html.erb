<div class="min-h-screen w-full flex flex-col items-center justify-center bg-gray-100 px-6">
  <h1 class="text-7xl font-bold text-orange-600 mb-6">KarAir</h1>

  <div class="w-full max-w-md bg-white rounded-xl shadow-md p-8">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6 text-center">Change your password</h2>

    <% if flash[:notice].present? %>
      <div class="flash-message bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>
    <% if flash[:alert].present? %>
      <div class="flash-message bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <p><%= flash[:alert] %></p>
      </div>
    <% end %>
    <% if resource.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <ul class="list-disc list-inside">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-5" }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <% password_error = resource.errors[:password].any? %>
      <div>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password",
          class: "mt-1 block w-full rounded-lg border py-2 px-3 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if password_error}" %>
        <% if @minimum_password_length %>
          <p class="text-sm text-gray-500 mt-1">Minimum <%= @minimum_password_length %> characters</p>
        <% end %>
        <% if password_error %>
          <p class="text-red-600 text-sm mt-1"><%= resource.errors[:password].first %></p>
        <% end %>
      </div>

      <% password_confirmation_error = resource.errors[:password_confirmation].any? %>
      <div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password",
          class: "mt-1 block w-full rounded-lg border py-2 px-3 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if password_confirmation_error}" %>
        <% if password_confirmation_error %>
          <p class="text-red-600 text-sm mt-1"><%= resource.errors[:password_confirmation].first %></p>
        <% end %>
      </div>

      <div>
        <%= f.submit "Change my password",
          class: "w-full bg-blue-600 text-white font-semibold py-2 rounded-lg hover:bg-blue-700 transition duration-200" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= link_to "Back to login", new_session_path(resource_name), class: "text-blue-600 hover:underline text-sm" %>
    </div>
  </div>
</div>
