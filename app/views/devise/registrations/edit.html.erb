<div class="min-h-screen w-full flex flex-col items-center justify-center bg-gray-100 px-6">
  <h1 class="text-7xl text-orange-600 mb-6">KarAir</h1>

  <div class="w-full max-w-md bg-white rounded-xl shadow-md p-8">
    <h2 class="text-2xl text-gray-800 mb-6 text-center">
      Edit <%= resource_name.to_s.humanize %>
    </h2>

    <% if resource.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <ul class="list-disc list-inside">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-5" }) do |f| %>
      <%# Email %>
      <% email_error = resource.errors[:email].any? %>
      <div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address",
          class: "mt-1 w-full rounded-lg border py-2 px-3 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if email_error}" %>
        <% if email_error %>
          <p class="text-red-600 text-sm mt-1"><%= resource.errors[:email].first %></p>
        <% end %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-sm text-gray-500">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <%# New password %>
      <% password_error = resource.errors[:password].any? %>
      <div>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "New password (leave blank to keep current)",
          class: "mt-1 w-full rounded-lg border py-2 px-3 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if password_error}" %>
        <% if @minimum_password_length %>
          <p class="text-sm text-gray-500 mt-1"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
        <% if password_error %>
          <p class="text-red-600 text-sm mt-1"><%= resource.errors[:password].first %></p>
        <% end %>
      </div>

      <%# Password confirmation %>
      <% password_confirmation_error = resource.errors[:password_confirmation].any? %>
      <div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password",
          class: "mt-1 w-full rounded-lg border py-2 px-3 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if password_confirmation_error}" %>
        <% if password_confirmation_error %>
          <p class="text-red-600 text-sm mt-1"><%= resource.errors[:password_confirmation].first %></p>
        <% end %>
      </div>

      <%# Current password %>
      <% current_password_error = resource.errors[:current_password].any? %>
      <div>
        <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Current password",
          class: "mt-1 w-full rounded-lg border py-2 px-3 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if current_password_error}" %>
        <p class="text-sm text-gray-500 mt-1">We need your current password to confirm changes</p>
        <% if current_password_error %>
          <p class="text-red-600 text-sm mt-1"><%= resource.errors[:current_password].first %></p>
        <% end %>
      </div>

      <div>
        <%= f.submit "Update",
          class: "w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition duration-200" %>
      </div>
    <% end %>

    <hr class="my-6 border-gray-300">

    <div class="text-center">
      <h3 class="text-lg text-gray-800 mb-2">Cancel my account</h3>
      <p class="text-sm text-gray-500 mb-2">Unhappy? This action cannot be undone.</p>
      <%= button_to "Cancel my account", registration_path(resource_name),
            data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
            method: :delete,
            class: "bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600 transition duration-200" %>
    </div>

    <div class="text-center mt-4">
      <%= link_to "Back", :back, class: "text-blue-600 hover:underline text-sm" %>
    </div>
  </div>
</div>
