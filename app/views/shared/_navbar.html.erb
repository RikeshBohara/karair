<nav class="bg-white border-b border-gray-200 h-18">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-full items-center justify-between">
      <div class="flex items-center gap-6">
        <%= link_to "KarAir", root_path, class: "text-xl font-bold text-orange-600" %>
        <div class="hidden sm:flex items-center gap-4">
          <%= link_to "Home", root_path, class: "text-gray-700 hover:text-gray-900" %>
        </div>
      </div>

      <div class="flex items-center gap-4">
        <% if user_signed_in? %>
          <% if current_user.profile&.photo&.attached? %>
            <%= link_to profile_path(current_user.profile), class: "block p-2" do %>
              <%= image_tag url_for(current_user.profile.avatar_variant(60)), alt: "Avatar", loading: "lazy", class: "rounded-full object-cover border-2 border-gray-300", style: "height:60px;width:60px;" %>
            <% end %>
          <% else %>
            <%= link_to profile_path(current_user.profile), class: "block p-2" do %>
              <div class="rounded-full bg-gray-200 flex items-center justify-center text-sm font-medium text-gray-700 border-2 border-gray-300" style="height:60px;width:60px;">
                <%= current_user.email.first.upcase %>
              </div>
            <% end %>
          <% end %>

          <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "ml-2 text-sm text-gray-600 hover:text-gray-900" %>
        <% else %>
          <%= link_to "Sign in", new_user_session_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>


